<?xml version="1.0" encoding="UTF-8" ?>

<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">

    <mapped-superclass name="Asdoria\SyliusProductDocumentPlugin\Entity\DocumentTypeTranslation" table="asdoria_document_type_translation">
        <id name="id" column="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <unique-constraints>
            <unique-constraint columns="locale,name" />
        </unique-constraints>

        <field name="name" column="name" type="string" />
    </mapped-superclass>

</doctrine-mapping>
