{% if product.productDocuments is not empty %}
    <div class="ui segment">
        <h3 class="ui dividing header">{{ 'asdoria.ui.download_documents'|trans }}</h3>
        <div class="ui very relaxed horizontal list centered">
            {% for document in product.productDocuments %}
                <div class="item">
                    <a class="ui labeled icon button" href="{{ path('asdoria_shop_product_document_download_file', {'path' : document.path}) }}">
                        <i class="download icon"></i>
                        {{ document.documentType.name }}
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
{% endif %}
